! URxvt config
URxvt.geometry: 80x50
! URxvt.font: xft:Liberation Mono:pixelsize=16:antialias=true:autohint=true
URxvt.font: xft:DejaVu Sans Mono:pixelsize=15:antialias=true:autohint=true
URxvt.scrollBar: false
URxvt.internalBorder: 0
URxvt.lineSpace: 1
URxvt.urgentOnBell: True

! extensions
URxvt.perl-ext-common: default,matcher,clipboard
URxvt.matcher.button: 1
URxvt.url-launcher: xdg-open

! clipboard
URxvt.iso14755: false
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste


! x11-ssh-askpass
SshAskpass.indicator.maximumCount: 5
SshAskpass.inputTimeout: 30
